<p id="notice"><%= notice %></p>

<h1>Listing Maps</h1>
<%= render 'login' %>\
<%= render 'register' %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maps.each do |map| %>
      <tr>
        <td>Name: <%= map.name %></td>
        <td><%= link_to 'Show', board_path(map) %></td>
        <% if current_user.has_role? :player  %>
        <td><%= link_to 'Play', edit_board_path(map) %></td>
        <% end %>
        <% if current_user.has_role? :admin  %>
        <td><%= link_to 'Edit', edit_map_path(map) %></td>
        <% end %>
        <% if current_user.has_role? :admin  %>
        <td><%= link_to 'Destroy', map, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Map', new_map_path %>
