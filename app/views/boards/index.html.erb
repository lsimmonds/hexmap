<p id="notice"><%= notice %></p>

<h1>Listing Boards</h1>
<%= render 'login' %>/<%= render 'register' %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td>Name: <%= board.name %></td>
        <td><%= link_to 'Show', board_path(board) %></td>
        <% if current_user.has_role? :player  %>
        <td><%= link_to 'Play', edit_board_path(board) %></td>
        <% end %>
        <% if current_user.has_role? :admin  %>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <% end %>
        <% if current_user.has_role? :admin  %>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

